{
  "name": "Japan-Africa Car Arbitrage System",
  "description": "System for identifying profitable used car arbitrage opportunities between Japan and Africa",
  "repository": "https://github.com/yourusername/japan-africa-car-arbitrage",
  "logo": "https://cdn.jsdelivr.net/npm/simple-icons@v3/icons/heroku.svg",
  "keywords": ["node", "express", "mongodb", "react", "car-arbitrage", "scraping"],
  "image": "heroku/nodejs",
  "stack": "heroku-22",
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    },
    "worker": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "addons": [
    {
      "plan": "mongolab:sandbox",
      "as": "MONGODB"
    }
  ],
  "env": {
    "NODE_ENV": {
      "description": "Node environment",
      "value": "production"
    },
    "USE_MOCK_DATA": {
      "description": "Use mock data for testing",
      "value": "false"
    },
    "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD": {
      "description": "Skip Chromium download for Puppeteer",
      "value": "true"
    }
  },
  "scripts": {
    "postdeploy": "echo 'Deployment completed successfully!'"
  }
}