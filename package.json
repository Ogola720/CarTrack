{
  "name": "japan-africa-car-arbitrage",
  "version": "1.0.0",
  "description": "System for identifying profitable used car arbitrage opportunities between Japan and Africa",
  "main": "backend/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm start",
    "setup": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "scrape": "node scraper/index.js",
    "scheduler": "node scheduler/index.js",
    "build": "cd frontend && npm run build",
    "start": "node backend/server.js",
    "heroku-postbuild": "cd backend && npm install && cd ../frontend && npm install && npm run build",
    "deploy:docker": "cd deployment && docker-compose up -d",
    "deploy:stop": "cd deployment && docker-compose down"
  },
  "keywords": [
    "car",
    "arbitrage",
    "scraping",
    "japan",
    "africa"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "cheerio": "^1.1.2",
    "dotenv": "^17.2.3",
    "mongoose": "^8.19.1",
    "node-cron": "^4.2.1",
    "puppeteer": "^24.25.0"
  }
}
